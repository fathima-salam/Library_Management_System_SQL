{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Environment Settings */
    "module": "commonjs",         // Node.js module system
    "target": "ES2020",           // Modern JS features
    "lib": ["ES2020"],            // Standard JS libs
    "types": ["node"],            // Node.js types

    /* Other Outputs */
    "sourceMap": true,            // Helps with debugging TS in Node
    "declaration": true,          // Generate .d.ts files for types
    "declarationMap": true,

    /* Strict Type-Checking */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* Module Resolution */
    "esModuleInterop": true,      // Allow `import express from "express"`
    "moduleResolution": "node",   // Node-style module resolution
    "forceConsistentCasingInFileNames": true,

    /* Skip unnecessary checks */
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}




